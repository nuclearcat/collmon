#!/usr/bin/env bash
set -e

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Calculate the project root by going up one level from scripts/
PROJECT_ROOT="$(dirname "$SCRIPT_DIR")"

# Verify docker-compose.yml exists
if [[ ! -f "$PROJECT_ROOT/docker-compose.yml" ]]; then
    echo "Error: docker-compose.yml not found at $PROJECT_ROOT/docker-compose.yml"
    exit 1
fi

show_help() {
    echo "Usage: collmon <command>"
    echo ""
    echo "Commands:"
    echo "  update    Pull latest images and restart containers"
    echo "  help      Show this help message"
    echo ""
}

cmd_update() {
    echo "Updating collmon..."
    cd "$PROJECT_ROOT"
    docker compose pull
    docker compose up -d
    echo "Update complete."
}

# Main command handler
case "${1:-}" in
    update)
        cmd_update
        ;;
    help|--help|-h|"")
        show_help
        ;;
    *)
        echo "Unknown command: $1"
        show_help
        exit 1
        ;;
esac
