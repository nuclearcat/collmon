#!/usr/bin/env bash
set -e

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Calculate the project root by going up one level from scripts/
PROJECT_ROOT="$(dirname "$SCRIPT_DIR")"

# Verify docker-compose.yml exists
if [[ ! -f "$PROJECT_ROOT/docker-compose.yml" ]]; then
    echo "Error: docker-compose.yml not found at $PROJECT_ROOT/docker-compose.yml"
    exit 1
fi

show_help() {
    echo "Usage: collmon <command>"
    echo ""
    echo "Commands:"
    echo "  update        Pull latest images and restart containers"
    echo "  fixdocker     Install Docker Compose v2 if not available"
    echo "  listservices  List available services"
    echo "  shell <svc>   Open a shell in a running service"
    echo "  help          Show this help message"
    echo ""
}

cmd_update() {
    echo "Updating collmon..."
    cd "$PROJECT_ROOT"
    docker compose pull
    docker compose up -d
    echo "Update complete."
}

cmd_fixdocker() {
    if docker compose version &>/dev/null; then
        echo "Docker Compose v2 is already available."
        docker compose version
    else
        echo "Docker Compose v2 not found. Installing..."
        if [[ $EUID -ne 0 ]]; then
            sudo "$SCRIPT_DIR/composev2install.sh"
        else
            "$SCRIPT_DIR/composev2install.sh"
        fi
    fi
}

cmd_listservices() {
    cd "$PROJECT_ROOT"
    docker compose config --services
}

cmd_shell() {
    if [[ -z "${1:-}" ]]; then
        echo "Usage: collmon shell <service>"
        echo ""
        echo "Hint: Run 'collmon listservices' to see available services."
        exit 1
    fi
    cd "$PROJECT_ROOT"
    docker compose exec "$1" /bin/sh
}

# Main command handler
case "${1:-}" in
    update)
        cmd_update
        ;;
    fixdocker)
        cmd_fixdocker
        ;;
    listservices)
        cmd_listservices
        ;;
    shell)
        cmd_shell "${2:-}"
        ;;
    help|--help|-h|"")
        show_help
        ;;
    *)
        echo "Unknown command: $1"
        show_help
        exit 1
        ;;
esac
